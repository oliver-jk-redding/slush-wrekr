#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../index')
var debug = require('debug')('<%= appNameSlug %>:server')
var http = require('http')
var colors = require('colors')

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000')
app.set('port', port)

/**
 * Create HTTP server.
 */

var server = http.createServer(app)

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port)
server.on('error', onError)
server.on('listening', onListening)

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10)

  if (isNaN(port)) {
    // named pipe
    return val
  }

  if (port >= 0) {
    // port number
    return port
  }

  return false
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges')
      process.exit(1)
      break
    case 'EADDRINUSE':
      console.error(bind + ' is already in use')
      process.exit(1)
      break
    default:
      throw error
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address()
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port
  debug('Listening on ' + bind)
  console.log(colors.green('\nServer listening on Port %s \n'), port)
  console.log('>>> In development, you should keep this server running in the background and, in another tab, run "npm run dev" and open the browser to localhost:8080. This will allow you to develop your front-end with hot reloading.\n'.bgCyan.black)
  console.log('>>> If you make any edits to files outside of the "src" folder, you will need to restart this server to see changes. The dev server will only live bundle the front-end files.'.bgCyan.black)
  console.log('>>> Once you have created your migration and seed files, use "npm run database" to create your database. You can run this command again to add changes to your database.\n'.bgCyan.black)
  console.log('>>> In production, you should run "npm run build" to build your bundle file before running "npm run start". You do not need to use the "build" script in development.\n'.bgCyan.black)
}
